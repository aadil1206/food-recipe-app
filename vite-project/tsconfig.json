{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["DOM", "ES2015"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["node_modules"]
}
